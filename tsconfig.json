{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ],
        "target": "es5"
    },
    "include": [
        "src/**/*",
        "index.ts"
    ],
}
